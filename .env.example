# ARUS (Marine Predictive Maintenance & Scheduling) - Environment Configuration
# Copy this file to .env and configure your values

# Database Configuration
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://arus_user:your_secure_database_password_here@postgres:5432/arus

# Application Configuration
NODE_ENV=production
SESSION_SECRET=your_super_secure_session_secret_change_this_value
PORT=5000

# Domain Configuration (for SSL/HTTPS)
DOMAIN=your-domain.com

# API Keys (Optional)
OPENAI_API_KEY=your_openai_api_key_here

# Monitoring Configuration (Optional)
GRAFANA_PASSWORD=your_grafana_admin_password

# Security Configuration
# Generate these with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# Rate Limiting (Optional overrides)
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/data/arus.log

# Feature Flags
ENABLE_MONITORING=true
ENABLE_AI_FEATURES=true
ENABLE_TELEMETRY=true